{
  "name": "skillsync-auth-service",
  "version": "1.0.0",
  "description": "SkillSync Authentication Service - JWT-based user authentication and authorization",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --inspect=0.0.0.0:9229 src/server.js",
    "test": "jest --coverage --verbose",
    "test:watch": "jest --watch",
    "test:unit": "jest --coverage --verbose --testPathPattern=tests/unit",
    "test:integration": "jest --coverage --verbose --testPathPattern=tests/integration",
    "migrate": "cd .. && bash scripts/run-migrations.sh auth",
    "migration:generate": "node src/scripts/generate-migration.js",
    "lint": "eslint src/"
  },
  "keywords": [
    "authentication",
    "jwt",
    "microservices",
    "express",
    "postgresql"
  ],
  "author": "SkillSync Team",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "redis": "^4.6.11",
    "uuid": "^9.0.1",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "tests/",
      "node_modules/"
    ],
    "delay": 1000
  }
}
